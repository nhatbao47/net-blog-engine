@model List<BlogEngine.Web.ViewModels.CategoryViewModel>
<div class="widget categories">
    <header>
        <h3 class="h6">Categories</h3>
    </header>
    @foreach (var item in Model)
    {
        <div class="item d-flex justify-content-between"><a asp-page="/Category" asp-route-Id="@item.Id">@item.Name</a><span>@item.PostCount</span></div>
    }
</div>